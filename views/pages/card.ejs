<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://kit.fontawesome.com/f2e0e49a34.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://csshake.surge.sh/csshake.min.css" />
    <link rel="stylesheet" href="csshake.min.css">
    <meta charset="utf-8" />
    <link rel="icon" href="./favicon.png" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="Web site created using create-react-app" />
    <title>Create cards</title>
    <link href="./static/css/main.3d3c7b79.chunk.css" rel="stylesheet">
</head>

<body>


    <main>

        <article className={`js-card palette`}>
            <div className="sample">
                <div className="sample__bar"></div>
                <h3 className="sample__name js-namePreview">
                    <%=name%>
                </h3>
                <h4 className="sample__subtitle js-positionPreview">
                    {job || "Front-end developer"}
                </h4>
                <div className="sample__photo js-profileImage" style={ backgroundImage: `url(${photo==="" ?
                    defaultAvatar : photo})`, }}></div>
                <nav className="social">
                    <ul className="social__menu">
                        <li className="social__menu--item">
                            <a className="js-phonePreview" href={phone==="" ? "#" : `tel:`}>
                                <i className="fas fa-mobile-alt"></i>
                            </a>
                        </li>

                        <li className="social__menu--item">
                            <a className="js-emailPreview" href={email==="" ? "#" : `mailto:`}>
                                <i className="fas fa-envelope"></i>
                            </a>
                        </li>

                        <li className="social__menu--item">
                            <a className="js-linkedinPreview" href={ linkedin.includes("https://www.linkedin.com/") ? ``
                                : linkedin ? `https://www.linkedin.com/in/` : `https://www.linkedin.com` }
                                target="_blank">
                                <i className="fab fa-linkedin-in"></i>
                            </a>
                        </li>

                        <li className="social__menu--item">
                            <a className="js-githubPreview" href={ github.includes("https://github.com/") ? `` :
                                `https://github.com/` } target="_blank">
                                <i className="fab fa-github-alt"></i>
                            </a>
                        </li>
                        <li className="social__menu--home">
                            <Link to="/">
                            <img src={burger} className="social__menu--icon homeIcon filter" title="thisIsMe web"
                                alt="this is me logo" />
                            </Link>
                        </li>
                    </ul>
                </nav>
            </div>
        </article>
    </main>
</body>

</html>